#!/bin/bash
set -e

# Build a Go static web server on top of busybox image
# and compile it for target daemon

dir="$DEST/httpserver"
mkdir -p "$dir"
(
    cd "$dir"
    echo "${dir}"
    GOOS=linux GOARCH=amd64 go build -a -n -v -x -o httpserver github.com/docker/docker/contrib/httpserver
    echo "done gobuild"
	cp ../../../../contrib/httpserver/Dockerfile .
	docker build -t httpserver . 
	echo "done docker build"
)
rm -rf "$dir"
